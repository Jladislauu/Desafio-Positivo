generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Rubric {
  id        Int      @id @default(autoincrement())
  name      String
  type      String   // 'fixed' or 'variable'
  createdAt DateTime @default(now())
  criteria  Criterion[]
}

model Criterion {
  id       Int     @id @default(autoincrement())
  name     String
  order    Int     // Para reordenar
  rubricId Int
  rubric   Rubric  @relation(fields: [rubricId], references: [id])
  levels   Level[]
}

model Level {
  id           Int       @id @default(autoincrement())
  label        String?   // Opcional em variable
  points       Float
  description  String
  criterionId  Int
  criterion    Criterion @relation(fields: [criterionId], references: [id])
}